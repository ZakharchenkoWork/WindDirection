<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="#44000000" android:startColor="#88000000" />
                    <padding android:top="@dimen/button_shadow_padding" android:left="@dimen/button_shadow_padding"
                        android:right="@dimen/button_shadow_padding" android:bottom="@dimen/button_shadow_padding"/>
                    <corners android:radius="@dimen/shape_shadow_corners" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_green_primary" />
                    <corners android:radius="@dimen/shape_shadow_corners" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="#44000000" android:startColor="#88000000" />
                    <padding android:top="@dimen/button_shadow_padding" android:left="@dimen/button_shadow_padding"
                        android:right="@dimen/button_shadow_padding" android:bottom="@dimen/button_shadow_padding"/>
                    <corners android:radius="@dimen/shape_shadow_corners" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_green_secondary" />
                    <corners android:radius="@dimen/shape_shadow_corners" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>