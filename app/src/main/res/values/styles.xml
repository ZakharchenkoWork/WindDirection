<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ButtonTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:minLines">3</item>
        <item name="colorButtonNormal">#888888</item>
        <item name="colorAccent">#ff0000</item>
    </style>

    <style name="main_button">
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <style name="green_button" parent="main_button">
        <item name="android:background">@drawable/button_green</item>
    </style>
    <style name="blue_button" parent="main_button">
        <item name="android:background">@drawable/button_blue</item>
    </style>
    <style name="text_label_main">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/container_side_margin</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/container_side_margin</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">@dimen/container_side_margin</item>
        <item name="android:paddingRight">@dimen/container_side_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:maxLines">1</item>
        </style>
    <style name="text_label_orange" parent="text_label_main">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:paddingLeft">@dimen/text_label_padding_left</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/text_label_padding_left</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">@dimen/text_label_padding_right</item>
        <item name="android:paddingRight">@dimen/text_label_padding_right</item>
        <item name="android:textSize">@dimen/text_size_minimal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
</resources>
