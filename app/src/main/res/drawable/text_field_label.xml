<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="#44000000" android:startColor="#88000000" />
                    <padding android:bottom="@dimen/button_shadow_padding" android:left="@dimen/button_shadow_padding" />
                    <corners android:radius="@dimen/shape_shadow_corners" />
                </shape>
            </item>
            <item android:width="20dp" android:gravity="fill_vertical|right|end">
                <bitmap android:src="@drawable/text_field" />
            </item>
        </layer-list>
    </item>
</selector>